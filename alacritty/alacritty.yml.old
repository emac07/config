draw_bold_text_with_bright_colors: true
import:
  - ~/.config/alacritty/nord.toml
window:
  opacity: 0.8
  padding:
    x: 10
    'y': 10
  class:
    instance: Alacritty
    general: Alacritty
scrolling:
  history: 10000
  multiplier: 3
  style: Regular
  size: 11
  normal:
    family: JetBrainsMono Nerd Font
  bold:
    family: JetBrainsMono Nerd Font
    style: Bold
  italic:
    family: JetBrainsMono Nerd Font
    style: Italic
  bold_italic:
    family: JetBrainsMono Nerd Font
    style: Bold Italic
key_bindings:
  - key: Return
    mods: Super|Shift
    action: SpawnNewInstance
